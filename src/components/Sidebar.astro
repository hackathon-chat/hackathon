<style>
  .main-sidebar {
    position: fixed;
    top: 60px;
    left: 0;
    width: 198px;
    height: calc(100vh - 60px);
    background-color: var(--yt-black);
    padding-top: 8px;
    z-index: 999;
    overflow-y: auto;
  }
  
  nav ul { 
    list-style: none; 
    padding: 0; 
    margin: 0; 
  }
  
  nav a {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 10px 24px;
    color: var(--yt-text-primary);
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
    border-radius: 10px;
    margin: 0 12px 4px;
  }
  
  nav a:hover {
    background-color: var(--yt-light-grey);
  }
  
  nav a.active {
    background-color: var(--yt-light-grey);
  }
  
  .divider {
    height: 1px;
    background-color: var(--yt-light-grey);
    margin: 12px 24px;
  }
  
  .categories-section {
    margin-top: 8px;
  }
  
  .categories-section a {
    font-size: 0.75rem;
  }
  
  .categories-section svg {
    width: 20px;
    height: 20px;
  }
</style>