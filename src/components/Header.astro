// src/components/Header.astro
---
<header class="main-header">
  <div class="logo-area">
    <a href="/" class="logo">Hackathon.chat</a>
  </div>
  <div class="actions-area">
    <a href="https://x.com/home" class="social-button" title="Twitter" target="_blank" rel="noopener noreferrer">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
    </a>
    <a href="https://github.com/hackathon-chat/hackathon" class="social-button" title="GitHub" target="_blank" rel="noopener noreferrer">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
    </a>
  </div>
</header>

<style>
  .main-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24px;
    z-index: 1000;
    box-sizing: border-box;
    /* 改回黑色背景，与左侧导航一致 */
    background-color: var(--yt-black);
    /* 去掉底部边框 */
  }
  .logo {
    color: var(--yt-text-primary);
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
  }
  .actions-area {
    display: flex;
    gap: 12px;
  }
  .social-button {
    background-color: transparent;
    border: 1px solid var(--yt-light-grey);
    color: var(--yt-text-primary);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  .social-button:hover {
    background-color: var(--yt-light-grey);
  }
  .search-area {
    display: flex;
    width: 40%;
    max-width: 500px;
  }
  .search-input {
    width: 100%;
    padding: 0 16px;
    border-radius: 40px 0 0 40px;
    border: 1px solid var(--yt-light-grey);
    background-color: var(--yt-black);  /* Unified black background */
    border-bottom: none;  /* Remove bottom border line */
    color: var(--yt-text-primary);
    font-size: 1rem;
  }
  .search-input:focus {
    outline: 1px solid #3ea6ff;
  }
  .search-button {
    padding: 0 20px;
    border-radius: 0 40px 40px 0;
    border: 1px solid var(--yt-light-grey);
    border-left: none;
    background-color: var(--yt-light-grey);
    cursor: pointer;
  }
  .search-button svg {
    color: var(--yt-text-secondary);
  }
  .submit-button {
    background-color: transparent;
    border: 1px solid var(--yt-light-grey);
    color: var(--yt-text-primary);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }
  .submit-button:hover {
    background-color: var(--yt-black);
  }
</style>